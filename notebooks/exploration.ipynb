# %%
import sys

sys.path.append("..")

import matplotlib.dates as mdates
import matplotlib.pyplot as plt
import pandas as pd

from src.aggregations import add_warmup_indicator, compute_rejection_rate_metrics
from src.features import compute_rejection_rate_baseline

# %%
df = pd.read_csv("../data/events.csv")

# %%
cp_df = compute_rejection_rate_metrics(df, "CP1")
cp_df = add_warmup_indicator(cp_df)

cp_df_baseline = compute_rejection_rate_baseline(cp_df)
cp_warm_df = cp_df_baseline.loc[cp_df_baseline["is_window_warm"]]

# %%
plt.figure(figsize=(10, 6))

plt.plot(cp_warm_df["timestamp_created"], cp_warm_df["rejection_rate_30m"])
plt.xlabel("Time")
plt.ylabel("Rejection Rate")
plt.xticks(rotation=65, fontsize=8)

ax = plt.gca()
ax.set_xlim(
    cp_df["timestamp_created"].min().to_pydatetime(),
    cp_df["timestamp_created"].max().to_pydatetime(),
)
ax.xaxis.set_major_locator(mdates.MinuteLocator(interval=5))
ax.xaxis.set_major_formatter(mdates.DateFormatter("%H:%M"))

plt.tight_layout()

plt.show()
# %%
plt.figure(figsize=(10, 6))

cp_df_baseline = cp_df_baseline.loc[cp_df_baseline["is_baseline_warm"]]
plt.plot(
    cp_df_baseline["timestamp_created"], cp_df_baseline["rejection_rate_delta_baseline"]
)
plt.xlabel("Time")
plt.ylabel("Rolling Rejection Rate Baseline")
plt.xticks(rotation=65, fontsize=8)

ax = plt.gca()
ax.set_xlim(
    cp_df_baseline["timestamp_created"].min().to_pydatetime(),
    cp_df_baseline["timestamp_created"].max().to_pydatetime(),
)

ax.xaxis.set_major_locator(mdates.MinuteLocator(interval=5))
ax.xaxis.set_major_formatter(mdates.DateFormatter("%H:%M"))

plt.tight_layout()

plt.show()
